{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - in_active_trail: TRUE if the link is in the active trail.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 */
#}



{% import _self as menus %}
{#
We call a macro which calls itself to render the full tree.
@see https://twig.symfony.com/doc/1.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0, menu_name) }}
{% macro menu_links(items, attributes, menu_level, menu_name, data_pid=0) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <div id="mobile-secondary-menu-div" class="tw-w-full tw-bg-neutral-700 tw-hidden tw-absolute tw-z-50 tw-h-screen">
      <ul class="mobile-secondary-menu-ul tw-w-full tw-items-center">
    {% endif %}
    {% set data_index = 0 %}
    {% for item in items %}
      {% if menu_level == 0 %}
        {% set data_index = data_index + 1 %}
        {% if loop.first %}
          <li class="mobile-secondary-menu-li-0 tw-ml-4 tw-pt-4 tw-pb-7 tw-flex tw-justify-between tw-pr-8 tw-text-bucktoothwhite" id={{ data_index }}>
        {% else %}
          <li class="mobile-secondary-menu-li-0 tw-ml-4 tw-pb-7 tw-flex tw-justify-between tw-pr-8 tw-text-bucktoothwhite" id={{ data_index }}>
        {% endif %}
      {% else %}
        <li class="tw-ml-12 tw-pb-7 tw-hidden tw-text-bucktoothwhite" data-pid={{ data_pid }}>
        {% set link_classes = ['tw-no-underline'] %}
      {% endif %}
      {# Set accessibility featues to tab through menu and span to act as a button #}
      {% if not item.url.isExternal() and item.url.getRouteName() is same as('<nolink>') and item.below %}
        {{ link(item.title, item.url, item.attributes.addClass(link_classes).setAttribute('tabindex', 0).setAttribute('role', 'button')) }}
      {% else %}
        {{ link(item.title, item.url, {'class': link_classes}) }}
      {% endif %}
      {# adding the chevron #}
      {% if menu_level == 0 and item.below %}
        <i class="fas fa-fw fa-chevron-down"></i>
      {% endif %}
      </li>
      {% if item.below %}
        {{ menus.menu_links(item.below, attributes, menu_level + 1, menu_name, data_index) }}
      {% endif %}
    {% endfor %}
    {% if menu_level == 0 %}
      </ul>
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}
