{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set inputs = [
    'tw-appearance-none',
    'tw-bg-transparent',
    'tw-border-neutral-200',
    'tw-placeholder-neutral-550',
    'tw-h-full',
    'group-hover-tw-text-osuorange'
] %}
<div class="tw-group tw-h-full">
    <input{{ attributes.addClass(inputs) }}/>{{ children }}
</div>
