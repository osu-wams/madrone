{% set classes = [
  'views-view-bootstrap-media'
] %}
<div{{ attributes.addClass(classes) }} id="{{ id }}">
  {% for key, row in rows -%}
    <div class="d-flex">
      <div class="flex-shrink-0">
        {% if row.image %}
          {{ row.image }}
        {% endif %}
      </div>
      <div class="flex-grow-1 ms-3">
        {% if row.heading %}
          {{ row.heading }}
        {% endif %}

        {% if row.body %}
          {{ row.body }}
        {% endif %}
      </div>
    </div>
  {%- endfor %}
</div>
