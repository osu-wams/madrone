{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-drupal"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "extend",
          "responsive",
          "screen",
          "variants"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "number-leading-zero": "never"
  }
}
